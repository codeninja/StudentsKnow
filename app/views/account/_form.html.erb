<p>
<label for="login">Login:</label>
<%= f.text_field :login, {:size => 20} %>
</p>

<p>
<label for="email">Email:</label>
<%= f.text_field :email, {:size => 20} %>
</p>

<p>
<label for="email_confirmation">Confirm Email:</label>
<%= f.text_field :email_confirmation, {:size => 20} %>
</p>

<p>
<label for="password">Password:</label>
<%= f.password_field :password, {:size => 20} %>
</p>

<p>
<label for="password_confirmation">Confirm Password:</label>
<%= f.password_field :password_confirmation, {:size => 20} %>
</p>

<p>
<label for="referral_code">Referral Code:</label>
<%= f.text_field :referral_code, :value => params[:code], :size => 20 %>
</p>

<p><label for="terms_and_conditions" style="line-height: 1em;">I certify I am over 18 years of age:</label>
<input id="accept_terms_check" type="checkbox" onClick="toggle_submit()" checked="false"/>
<script type="text/javascript" charset="utf-8">$('accept_terms_check').checked = false; $('submit_button').disabled = true;</script>
</p>


