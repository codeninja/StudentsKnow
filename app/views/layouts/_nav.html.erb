<div id="nav">
	<div style="float: right;">
		<ul class="nav">
			<% if self.current_user == :false %>
				<li class="right_links">   <%= link_to "sign up / log in", login_path %></li>
			<% else %>
				<li class="right_links"> Welcome, <%= self.current_user.login %> <%= link_to "log out", logout_path %> </li>

			<% end %>
		</ul>
	</div>

	<div style="float: left;">
		<ul class="nav">
			<%# See application_helper.rb for nav_li method %>
			<%#= request.env["REQUEST_PATH"]%>
			<%= nav_li("HOME", "/") %>
			<%= nav_li("VIDEOS&nbsp;&&nbsp;PODCASTS", [videos_path, videos_cat_path, search_path]) %>
			<%= nav_li("MESSAGE&nbsp;BOARD", [messages_path, 'messages', 'message_board']) %>
			<%= nav_li("UPLOAD", [upload_path, new_video_path]) %>
			<%= nav_li("MY&nbsp;PROFILE", [ (logged_in? ? user_path(self.current_user) : login_path), 
											(logged_in? ? edit_password_path(:id => self.current_user.login) : nil),
											(logged_in? ? edit_user_profile_path(self.current_user) : nil)
										  ].compact)%>
			<%= nav_li("ABOUT", about_path)%>
		</ul>
	</div>

	<div class="clear"><!-- --></div>

</div>
