<h1>Editing Dirty Video</h1>

<%= error_messages_for :video %>

<% form_for :video, :url => admin_edit_dirty_path do |f| %>

  
  <div id="left_side">
  	<%= render :partial => "videos/player" %>
  	<div class="clear"></div>
  </div>
<div id="right_side">
<p><label for="name">Name</label>
<%= f.text_field :name %></p>

<p><label for="isbn">ISBN</label>
<%= f.text_field :isbn %></p>

<p><label for="book_author">Author</label>
<%= f.text_field :book_author %></p>

<p><label for="chapter">Chapter</label>
<%= f.text_field :chapter %></p>

  
<p><label for="university">University:</label>
<%= f.select :university, universities %></p>

<p><label for="subject">Subject</label>
<%= f.text_field :subject %></p>

<p><label for="description">Description</label>
<%= f.text_field :description %></p>

<p><label for="book_title">Title</label>
<%= f.text_field :book_title %></p>

<p><label for="professor">Professor</label>
<%= f.text_field :professor %></p>

<p><label for="class_number">Class Number</label>
<%= f.text_field :class_number %></p>


  <p class="submit_dirty">
    <%= submit_tag "Update" %>
    <%= link_to 'Back', admin_dirties_path() %>
  </p>

  
  <% end %>
  
</div>

 


