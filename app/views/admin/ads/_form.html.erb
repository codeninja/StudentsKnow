<p>
<label for="name">Name:</label>
<%= @f.text_field :name %>
</p>

<p>
  <label for="width">
    Width:
  </label>
  <%= @f.text_field :width %>
</p>

<p>
  <label for="height">
    Height:
  </label>
  <%= @f.text_field :height %>
</p>

<p>
<label for="size">Size (width, height):</label>
<%= @f.select :size, Ad.size_options_for_select, :selected => @ad.size %>
</p>

<p>
  <label for="text_only">
    Text Only:
  </label>
  <%= @f.check_box :text_only %>
</p>

<p>
  <label for="code">Code:</label>
  <%= @f.text_area(:code) %>
</p>

<p>
	<label for="weight">Statistical Weight<br/>(low to high)</label>
	<%= @f.select(:weight, (1..5).to_a.collect{|x| [x,x]})%>
</p>
<br/>
	