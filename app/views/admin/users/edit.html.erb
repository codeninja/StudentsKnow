<h1>Editing message</h1>

<%= error_messages_for :user %>

<% form_for :user, :url => admin_edit_user_path do |f| %>
  
<p><label for="login">Login</label>
<%= f.text_field :login %></p>

  <p><label for="email">Email</label>
<%= f.text_field :email %></p>

  
  <div id="password_option">
    <p>If you wish to change the user's password, fill in the next two fields</p>
    <p>
	<label for="password">Password:</label>
	<%= f.password_field :password, {:size => 20} %>
	</p>

	<p>
	<label for="password_confirmation">Confirm Password:</label>
	<%= f.password_field :password_confirmation, {:size => 20} %>
	</p>
  </div>
  <p>
    <%= submit_tag "Update" %>
	<%= link_to 'Back', admin_users_path() %>
  </p>

  
  <% end %>

