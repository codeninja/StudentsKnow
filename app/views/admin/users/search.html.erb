<%= render :partial => "admin/users/users_search" %>

<% unless @users.nil? %>
        <h3>In User Logins or User Emails:</h3>
          <% unless @users == [] %>
            <div id="table" >
              <table>
                <thead>
                    <tr>
                        <th >Login</th>
                        <th >Email</th>
                        <th colspan=3>Actions </th>
                    </tr>
                </thead>
                          
                    <% for user in @users %>
                           
                      <tr>
                            <td width=300><div class="user_result_item"><%= user.login %></div></td>
                            <td width=300><div class="user_result_item"><%= user.email %></div></td>
                             <td width=30> <%= link_to "Edit",  admin_edit_user_path(user.id) %></td>
	 						 <td width=30> <%= link_to "Delete",  admin_delete_user_path(user.id) %></td>
							 <td width=100> <%= link_to "List Videos",  admin_user_videos_path(user.id) %></td>

                               </tr>
                    <% end %>
              </table>
        </div>
        <% else %>
           No matches in Users
        <% end %>

<% end %>




